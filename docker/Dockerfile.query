FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY dataflow/query/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY dataflow/query/ /app/dataflow/query/
COPY dataflow/__init__.py /app/dataflow/__init__.py

# Set Python path
ENV PYTHONPATH=/app

# Run the service
CMD ["python", "-m", "dataflow.query.api.main"]
