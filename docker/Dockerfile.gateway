# Ingestion Gateway Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY dataflow/ingestion/gateway/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY types/ /app/types/
COPY dataflow/adapters/ /app/dataflow/adapters/
COPY dataflow/ingestion/gateway/ /app/dataflow/ingestion/gateway/

# Set Python path
ENV PYTHONPATH=/app

# Run the service
CMD ["python", "-m", "dataflow.ingestion.gateway.main"]
